{
  "name": "slc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "dist": "cp -R src/client/index.html src/client/css src/client/img dist/client",
    "esbuild": "esbuild src/client/client.ts --bundle --minify --sourcemap --outfile=dist/client/client.js",
    "build": "npm-run-all clean tsc dist esbuild",
    "start": "node dist/server/server.js",
    "dev": "nodemon --watch src -e ts,html,css --exec npm-run-all build start"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "esbuild": "^0.19.6",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5"
  }
}
